<Window x:Class="Layout.SimpleWrap"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layout"
        mc:Ignorable="d"
        Title="SimpleWrap" Height="300" Width="300">
    <Grid>
        <WrapPanel>
            <Button Content="Button 1"/>
            <Button MinHeight="60" Content="Button 2"/>
            <Button VerticalAlignment="Bottom" Content="Button 3"/>
            <Button VerticalAlignment="Center" Content="Button 4"/>
        </WrapPanel>
    </Grid>
</Window>
